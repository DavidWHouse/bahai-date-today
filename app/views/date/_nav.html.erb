<div class="row">
  <div class="col s2">
    <%= link_to date_path(date_as_params(@date - 1)) do %>
      <i class="material-icons large">chevron_left</i>
    <% end %>
  </div>
  <div class="col s8 center-align flow-text">
    <p><strong>
      <%= link_to date_path(date_as_params(@date)), rel: 'bookmark' do %>
        <%= @date.long_format %><br />
        (<%= @date.gregorian_date.strftime("%A %-d %B %Y") %>)</a>
      <% end %>
    </strong></p>
    <p>The day starts at sunset on <span class="nowrap"><%= (@date.gregorian_date - 1).strftime("%-d %B %Y") %>.</span></p>
  </div>
  <div class="col s2 right-align">
    <%= link_to date_path(date_as_params(@date + 1)) do %>
      <i class="material-icons large">chevron_right</i>
    <% end %>
  </div>
</div>
